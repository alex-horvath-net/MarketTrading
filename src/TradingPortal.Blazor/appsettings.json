{
  "ApiGateway": {
    "BaseAddress": "https://localhost:5001" // your YARP base URL
  },
  "IdentityService": {
    "BaseAddress": "https://localhost:5002"
  },
  "OpenIdConnect": {
    "Authority": "https://localhost:5002",
    "ClientId": "trading-ui",
    "ClientSecret": "secret-if-needed",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc",
    "RequireHttpsMetadata": true,
    "ResponseType": "code"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
