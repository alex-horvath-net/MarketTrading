{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "profiles": {
    "http": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      "applicationUrl": "http://localhost:5002",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        // point to shared keys folder (we’re not using certs here)
        "ASPNETCORE_Kestrel__Endpoints__Http__Url": "http://+:5002",
        "ConnectionStrings__Default": "Server=localhost,1433;Database=TraderDb;User Id=sa;Password=Your!Pass123;TrustServerCertificate=True;"
      }
    },
    "Docker": {
      "commandName": "Docker",
      "launchBrowser": true,
      "launchUrl": "{Scheme}://{ServiceHost}:{ServicePort}",
      "applicationUrl": "http://localhost:5002",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://+:80",
        "ConnectionStrings__Default": "Server=host.docker.internal,1433;Database=TraderDb;User Id=sa;Password=Your!Pass123;TrustServerCertificate=True;"
      },
      "publishAllPorts": true
    }
  }
}
