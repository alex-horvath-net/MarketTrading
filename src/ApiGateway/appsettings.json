{
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://+:443",
        "Certificate": {
          // You can also use Environment Variables or Azure Key Vault integration
          "Path": "certificates/apigateway.pfx",
          "Password": "YourPassword123"
        }
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "TradingServiceRoute": {
        "ClusterId": "TradingServiceCluster",
        "Match": {
          "Path": "/trading/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "TradingServiceCluster": {
        "Destinations": {
          "Destination1": {
            // Inside Docker network, the service name is "tradingservice"
            "Address": "http://tradingservice:80/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
