{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "profiles": {
    "project": {
      "commandName": "Project",
      "launchBrowser": false,
      "applicationUrl": "https://localhost:5001",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001",
        "ASPNETCORE_Kestrel__Certificates__Default__Path": "../../certificates/aspnetapp.pfx",
        "ASPNETCORE_Kestrel__Certificates__Default__Password": "YourPassword123",
        "ConnectionStrings__Default": "Server=localhost,1433;Database=IdentityDb;User Id=sa;Password=Your!Pass123;TrustServerCertificate=True;"
      }
    },
    "docker": {
      "commandName": "Docker",
      "launchBrowser": false,
      //Dockerfile ENV ASPNETCORE_URLS="https://+:443" tells the container to listen on port 443
      //publishAllPorts": false is set to false to avoid publishing all ports
      "publishAllPorts": false,
      "useSSL": true,
      "sslPort": 443,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_HTTPS_PORTS": "5001",
        "ConnectionStrings__Default": "Server=host.docker.internal,1433;Database=IdentityDb;User Id=sa;Password=Your!Pass123;TrustServerCertificate=True;"
      }
    }
  }
}
